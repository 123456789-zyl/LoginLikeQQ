<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="FullScreenTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--自定义EditText的下划线-->
    <style name="Theme.Custom.Control.EditText" parent="Theme.AppCompat.Light">
        <!--EditText未被激活时的下划线颜色-->
        <item name="colorControlNormal">@color/transparent</item>
        <!--EditText激活时的下划线颜色-->
        <item name="colorControlActivated">@color/transparent</item>
    </style>

    <style name="QQLoginEditText">
        <item name="android:textColor">@color/qq_white</item>
        <item name="android:textColorHint">@color/alpha70_white</item>
        <item name="android:theme">@style/Theme.Custom.Control.EditText</item>
        <item name="android:maxLines">1</item><!--最多显示1行-->
        <item name="android:scrollbars">vertical</item> <!--垂直滚动条-->
        <item name="android:singleLine">true</item><!--单行?-->

    </style>

    <!--textView默认不获取焦点，所以点击不起作用-->
    <style name="ClickableTextView">
        <item name="android:textColor">@drawable/bg_hypertext</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
